---
interface Props {
  title: string;
}
const { title } = Astro.props;
import "../styles/global.css";
const isLandingPage = Astro.url.pathname === "/";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Campamento Invernal de ProgramaciÃ³n Competitiva en Chile"
    />
    <title>CIPC{title && " - " + title}</title>
    <script src="js/theme.js" is:inline></script>
  </head>
  <body class:list={{ dark: isLandingPage }}>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
