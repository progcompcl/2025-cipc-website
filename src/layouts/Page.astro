---
interface Props {
  title: string;
}
const { title } = Astro.props;
import Header from "../components/Header.astro";
import Base from "../layouts/Base.astro";
import "../styles/page.css";
---

<Base title={title}>
  <Header />
  <main>
    <slot name="before-article" />
    <article class="prose mx-auto md:prose-xl px-4 md:px-20">
      <slot />
    </article>
  </main>
</Base>
