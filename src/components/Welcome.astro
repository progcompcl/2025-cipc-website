---
import Header from "../components/Header.astro";
import background from "../assets/utfsm.jpg";
---

<main class="flex flex-col items-center">
  <Header />
  <section id="hero" class="flex flex-col items-center justify-center h-[100%]">
    <img
      class="absolute top-0 left-0 h-[100dvh] object-cover -z-10 filter brightness-[0.5]"
      id="background"
      src={background.src}
      alt=""
      fetchpriority="high"
    />
    <h1 id="hero-title" class="font-title text-white">
      CAMPAMENTO INVERNAL <br /> DE <span class="highlight"
        >PROGRAMACIÓN <br /> COMPETITIVA</span
      >
    </h1>
    <h2 id="hero-subtitle" class="mt-5 font-mono text-center text-white">
      22 de Julio - 2 de Agosto <br /> UTFSM Valparaíso <br /> Próximamente inscripciones
    </h2>
  </section>

  <!-- <section id="about">
    <h1>¿Qué es el CIPC?</h1>
  </section> -->
</main>

<style>
  #hero-title {
    text-align: center;
    font-weight: 900;
    font-size: clamp(2.5rem, 6vw, 5rem);
    line-height: 0.9;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    /*text-shadow: 0 0 4px rgba(0, 0, 0, 0.5);*/
    letter-spacing: -3px;
  }
  .highlight {
    color: #00ffe7;
    text-shadow: 0 0 4px rgba(0, 255, 231, 0.5);
  }

  main {
    height: 100%;
    display: flex;
    justify-content: center;
  }

  h1 {
    font-size: 26px;
  }
</style>
